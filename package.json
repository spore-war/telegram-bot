{
  "name": "spore-war-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Spore War game group with greetings and navigation buttons",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "webhook": "ts-node src/webhook-server.ts",
    "webhook:build": "tsc && node dist/webhook-server.js",
    "tunnel": "cloudflared tunnel --url http://localhost:3000"
  },
  "keywords": [
    "telegram",
    "bot",
    "telegraf"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "telegraf": "^4.15.6",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}

